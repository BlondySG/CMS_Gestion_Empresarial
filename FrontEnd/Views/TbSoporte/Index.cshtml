@model IEnumerable<FrontEnd.Models.TbSoporteViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Soporte</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><i class="bi bi-tools"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Soporte</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">

        <!--Inicio tarjeta-->
        <div class="card">
            <h6 class="card-header mb-0 text-uppercase">Detalle Soporte</h6>
            <div class="card-body">
                <div class="table-responsive">
                    <p>
                        <a asp-action="Create"><button class="btn btn-success">Nuevo Soporte</button></a>
                    </p>
                        <table id="dataTable" class="table table-striped" table-bordered>
                            <thead class="table-dark">
                                <tr>
                                    @*<th>
                                        @Html.DisplayNameFor(model => model.IdSoporte)
                                    </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.DescripcionSoporte)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FechaAgendada)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FechaCierreSoporte)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Estatus)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdCliente)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdEmpleado)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IdTipo)
                                    </th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                        @foreach (var item in Model) {
                                <tr>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.IdSoporte)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DescripcionSoporte)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaAgendada)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaCierreSoporte)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Estatus)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TbCliente.NombreCliente)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TbEmpleado.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TbTipo.NombreSoporte)
                                    </td>
                                    <td>
                                        @Html.ActionLink("", "Edit",null, new { id=item.IdSoporte }, new { @class="bi bi-pencil-fill text-warning"}) |
                                        @Html.ActionLink("", "Details",null, new { id=item.IdSoporte }, new { @class="bi bi-eye-fill text-primary"}) |
                                        @Html.ActionLink("", "Delete",null, new { id=item.IdSoporte }, new { @class="bi bi-trash-fill text-danger"})
                                    </td>
                                </tr>
                        }
                            </tbody>
                        </table>
                        </div>
                    </div>
            <!--Fin tarjeta-->

        </div>
    </div>
</div>
<!--end page main-->