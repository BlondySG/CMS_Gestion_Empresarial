@model IEnumerable<FrontEnd.Models.TbDatosCompraViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Facturación</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><i class="bi bi-cart-check"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Compras</li>
            </ol>
        </nav>
    </div>
</div>
<!--end breadcrumb-->
<div class="row">
    <div class="col-sm-12">

        <!--Inicio tarjeta-->
        <div class="card">
            <h6 class="card-header mb-0 text-uppercase">Detalle Compras</h6>
            <div class="card-body">
                <div class="data_table table-responsive">
                    <p>
                        <a asp-action="Create"><button class="btn btn-success">Nueva Compra</button></a>
                    </p>
                    <table id="dataTable" class="table table-striped" table-bordered>
                        <thead class="table-dark">
                            <tr>
                                @*<th>
                                @Html.DisplayNameFor(model => model.IdCompra)
                                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.NumFacturaCompra)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdProveedor)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdArticulo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cantidad)
                                </th>
                                @*<th>
                                @Html.DisplayNameFor(model => model.PrecioUnitario)
                                </th>
                                <th>
                                @Html.DisplayNameFor(model => model.ImpuestoCompra)
                                </th>
                                <th>
                                @Html.DisplayNameFor(model => model.SubTotalCompra)
                                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.TotalCompra)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FechaCompra)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @*<td>
                                @Html.DisplayFor(modelItem => item.IdCompra)
                                </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NumFacturaCompra)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TbProveedor.NombreProveedor)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TbArticulo.NombreArticulo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cantidad)
                                    </td>
                                    @*<td>
                                @Html.DisplayFor(modelItem => item.PrecioUnitario)
                                </td>
                                <td>
                                @Html.DisplayFor(modelItem => item.ImpuestoCompra)
                                </td>
                                <td>
                                @Html.DisplayFor(modelItem => item.SubTotalCompra)
                                </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TotalCompra)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaCompra)
                                    </td>
                                    <td>
                                        @Html.ActionLink("", "Edit",null, new { id=item.IdCompra }, new { @class="bi bi-pencil-fill text-warning"}) |
                                        @Html.ActionLink("", "Details",null, new { id=item.IdCompra }, new { @class="bi bi-eye-fill text-primary"}) |
                                        @Html.ActionLink("", "Delete",null, new { id=item.IdCompra }, new { @class="bi bi-trash-fill text-danger"})
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
            <!--Fin tarjeta-->

        </div>
    </div>
</div>
<!--end page main-->