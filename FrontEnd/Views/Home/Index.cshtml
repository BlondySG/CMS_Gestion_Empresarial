@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/@devedse/chartjs-plugin-datalabels"></script>*@

    <script>
        // Obtén los datos de la base de datos SQL Server y guárdalos en variables JavaScript
        var labels = @Html.Raw(Json.Serialize(ViewBag.Labels)); // Reemplaza ViewBag.Labels con la variable que contiene las etiquetas de tu gráfico
        var data = @Html.Raw(Json.Serialize(ViewBag.Data)); // Reemplaza ViewBag.Data con la variable que contiene los datos de tu gráfico

        // Configura el gráfico
        var ctx = document.getElementById('myChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Total Compras',
                    data: data,
                    backgroundColor: 'rgba(75, 192, 192, 0.2)', // Configura el color de fondo de las barras
                    borderColor: 'rgba(75, 192, 192, 1)', // Configura el color del borde de las barras
                    borderWidth: 1 // Configura el ancho del borde de las barras
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    datalabels: { // Configura las etiquetas de datos en las barras
                        anchor: 'end',
                        align: 'end',
                        font: {
                            size: 14
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}


