@model FrontEnd.Models.TbDatosVentaViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Facturación</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><i class="bi bi-bag-check"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Ventas</li>
            </ol>
        </nav>
    </div>
</div>
<!--end breadcrumb-->

<div class="row">
    <div class="col-sm-12">

        <!--Inicio tarjeta-->
        <div class="card">
            <h6 class="card-header mb-0 text-uppercase">Ver Venta</h6>
            <div class="card-body">
                <div class="responsive">
                    <div class="row">
                        <div class="col-md-8">
                        <dl class="row">
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.IdVenta)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.IdVenta)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.NumFacturaVenta)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.NumFacturaVenta)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.FechaCompra)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.FechaCompra)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.Cantidad)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.Cantidad)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.PrecioUnitario)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.PrecioUnitario)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.ImpuestoVenta)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.ImpuestoVenta)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.SubTotalVenta)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.SubTotalVenta)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.TotalVenta)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.TotalVenta)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.FechaVenta)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.FechaVenta)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.IdArticulo)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.TbArticulo.NombreArticulo)
                            </dd>
                            <dt class = "col-sm-2">
                                @Html.DisplayNameFor(model => model.IdCliente)
                            </dt>
                            <dd class = "col-sm-10">
                                @Html.DisplayFor(model => model.TbCliente.NombreCliente)
                            </dd>
                        </dl>
                    </div>
                    </div>
                    <br />
                    <div>
                        @Html.ActionLink("Editar", "Edit", new { id = Model.IdVenta }, new { @class="btn btn-warning"}) |
                        @Html.ActionLink("Regresar", "Index","TbDatosVenta", null, new { @class="btn btn-primary"})
                    </div>
                    </div>
                </div>
            <!--Fin tarjeta-->

        </div>
    </div>
</div>
<!--end page main-->

