@model FrontEnd.Models.TbSoporteClienteViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Soporte</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><i class="bi bi-file-earmark-spreadsheet"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Soporte</li>
            </ol>
        </nav>
    </div>
</div>
<!--end breadcrumb-->
<div class="row">
    <div class="col-sm-12">

        <!--Inicio tarjeta-->
        <div class="card">
            <h6 class="card-header mb-0 text-uppercase">Editar Soporte de Cliente</h6>
            <div class="card-body">
                <div class="responsive">
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdSoporteCliente" class="control-label"></label>
                <input asp-for="IdSoporteCliente" class="form-control" readonly />
                <span asp-validation-for="IdSoporteCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdSoporte" class="control-label"></label>
                <input asp-for="IdSoporte" class="form-control" />
                <span asp-validation-for="IdSoporte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                @Html.DropDownListFor(model => model.IdCliente, new SelectList(Model.Clientes, "IdCliente", "NombreCliente"), "--Select--", new { @class="form-control"})
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-info" /> |
                @Html.ActionLink("Regresar", "Index","TbSoporteCliente", null, new { @class="btn btn-primary"})
            </div>
        </form>
    </div>
</div>
                </div>
            </div>
<!--Fin tarjeta-->
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
