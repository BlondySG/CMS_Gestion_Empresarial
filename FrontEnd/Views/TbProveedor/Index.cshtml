@model IEnumerable<FrontEnd.Models.TbProveedorViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Gestión</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="javascript:;"><i class="bi bi-person-lines-fill"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Proveedores</li>
            </ol>
        </nav>
    </div>
</div>
<!--end breadcrumb-->

<div class="row">
    <div class="col-sm-12">

        <!--Inicio tarjeta-->
        <div class="card">
            <h6 class="card-header mb-0 text-uppercase">Detalle Proveedores</h6>
            <div class="card-body">
                <div class="table-responsive">
                    <p>
                        <a asp-action="Create"><button class="btn btn-success">Nueva Proveedor</button></a>
                    </p>
                    <table id="dataTable" class="table table-striped" table-bordered>
                        <thead class="table-dark">
                            <tr>
                                @*<th>
                                @Html.DisplayNameFor(model => model.IdProveedor)
                                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.NombreProveedor)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CorreoProveedor)
                                </th>
                                @*<th>
                                @Html.DisplayNameFor(model => model.NombreContacto)
                                </th>
                                <th>
                                @Html.DisplayNameFor(model => model.DireccionProveedor)
                                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.TelefonoProveedor)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProductoProveedor)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Activo)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @*<td>
                                @Html.DisplayFor(modelItem => item.IdProveedor)
                                </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreProveedor)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CorreoProveedor)
                                    </td>
                                    @*<td>
                                @Html.DisplayFor(modelItem => item.NombreContacto)
                                </td>
                                <td>
                                @Html.DisplayFor(modelItem => item.DireccionProveedor)
                                </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TelefonoProveedor)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductoProveedor)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Activo)
                                    </td>
                                    <td>
                                        @Html.ActionLink("", "Edit",null, new { id=item.IdProveedor }, new { @class="bi bi-pencil-fill text-warning"}) |
                                        @Html.ActionLink("", "Details",null, new { id=item.IdProveedor }, new { @class="bi bi-eye-fill text-primary"}) |
                                        @Html.ActionLink("", "Delete",null, new { id=item.IdProveedor }, new { @class="bi bi-trash-fill text-danger"})
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!--Fin tarjeta-->

        </div>
    </div>
</div>
<!--end page main-->